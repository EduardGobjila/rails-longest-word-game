<div class="container">
  <h1>New game</h1>
  <div class="letters mb-3">
    <% @letters.each do |letter| %>
        <p><%= letter %></p>
    <% end %>
  </div>
</div>
<form action="score" method="post" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
   <p>What is the longest word you can find?</p>
  <input type="text" name="word" class="form-control">
  <input type="submit" value="Play" class="form-control btn btn-primary">
</form>
